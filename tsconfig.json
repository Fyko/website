{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"noUnusedParameters": true,
		"outDir": "dist",
		"sourceMap": true,
		"noUnusedLocals": true,
		"removeComments": false,
		"target": "ES2020",
		"importsNotUsedAsValues": "error",
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "public"]
}